{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block body %}
	<h1 class="text-center">{{ blog.title }}</h1>

	<main class="row">
		<div class="col-sm-8 col-md-6 col-12 mx-auto my-3 text-justify">
			<p>
				{{ blog.content }}
			</p>
			<p class="text-right">
				<i>Ecrit par
					{{ blog.user.email }} le
					{{ blog.createAt ? blog.createAt|date('d/m/Y à h:m') : '' }}</i>
			</p>
            {% if blog.modifyAt %}

                <p class="text-right">
				<i>Dernière modification  le
					{{ blog.modifyAt ? blog.modifyAt|date('d/m/Y à h:m') : '' }}</i>
			</p>

            {% endif %}

		
			<a class="text-center d-block" href="{{ path('app_blog_index') }}">Accueil</a>
			{# <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a> #}
		</div>

	</main>


	{# {{ include('blog/_delete_form.html.twig') }} #}
{% endblock %}
